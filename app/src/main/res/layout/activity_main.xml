<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- Contenedor de la vista de cámara -->
    <FrameLayout
        android:id="@+id/preview_frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/thermal_scale_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/msx_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:contentDescription="Imagen combinada IR y visual"
                android:scaleType="centerCrop"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/photo_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:contentDescription="Imagen visual"
                android:scaleType="centerCrop"
                android:visibility="visible" />
        </LinearLayout>
    </FrameLayout>

    <!-- Barra térmica con valores -->
    <LinearLayout
        android:id="@+id/thermal_scale_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/preview_frame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tempMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30.8°C"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:paddingEnd="8dp" />

        <ImageView
            android:id="@+id/thermal_scale"
            android:layout_width="240dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:contentDescription="Barra térmica de colores" />

        <TextView
            android:id="@+id/tempMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="37.0°C"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:paddingStart="8dp" />
    </LinearLayout>

    <!-- Texto informativo -->
    <TextView
        android:id="@+id/informacion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/thermal_scale_container"
        app:layout_constraintBottom_toTopOf="@+id/control_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Barra de controles inferior -->
    <LinearLayout
        android:id="@+id/control_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#80000000"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/connect_flir_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="connectFlirOne"
            android:text="@string/connect_f1_text"
            android:enabled="false"/>

        <Button
            android:id="@+id/disconnect_flir_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="disconnect"
            android:text="@string/disconnect_text"
            android:enabled="false"/>
    </LinearLayout>

    <!-- Miniatura de la imagen capturada -->
    <ImageView
        android:id="@+id/imagen_capturada"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:background="@android:color/darker_gray"
        android:scaleType="centerCrop"
        android:contentDescription="Miniatura de la imagen capturada"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/control_bar"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón de captura circular -->
    <Button
        android:id="@+id/captura"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@android:color/white"
        android:contentDescription="Capturar imagen"
        android:enabled="false"
        app:layout_constraintBottom_toTopOf="@+id/control_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón NUC -->
    <Button
        android:id="@+id/nuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="performNuc"
        android:text="NUC"
        android:enabled="false"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
